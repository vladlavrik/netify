# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{js,ts,tsx}]
indent_style = tab
tab_width = 4

[*.css]
indent_style = tab
tab_width = 4

[*.{json,prettierrc,eslintrc,stylelintrc}]
indent_style = tab
tab_width = 2
